{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ESNext", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist/esm",
    "strict": true,
    "target": "ES2022",
    "noEmitOnError": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
